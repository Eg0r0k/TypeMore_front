{
  "strict": true,
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*":["./src/shared/*"],
      "@pages/*":["./src/pages/*"],
      "@entities/*":["./src/entities/*"],
      "@widgets/*":["./src/widgets/*"],
      "@app/*":["./src/app/*"]
    }
  },
  "lib": ["es2015", "dom", "dom.iterable", "scripthost"]

}
